<%- include('partials/header', { title: 'Homepage - MovieWatch' }) %>

<main>
    <div style="text-align:center;padding:4rem 0;">
        <h1 style="font-size:2.5rem;margin-bottom:1rem;">Homepage</h1>
        <p class="muted" style="margin-top:1rem;margin-bottom:2rem;font-size:1.1rem;">Welcome to your MovieWatch homepage</p>
        <% if (typeof currentUser !== 'undefined' && currentUser) { %>
            <div style="margin-top:3rem;">
                <a href="/movies"><button style="margin:0 1rem; padding:0.75rem 2rem; font-size:1.1rem;">Browse Movies</button></a>
                <a href="/movies/mymovies"><button style="margin:0 1rem; padding:0.75rem 2rem; font-size:1.1rem;">My Movies</button></a>
                <a href="/movies/add"><button style="margin:0 1rem; padding:0.75rem 2rem; font-size:1.1rem;">Add Movie</button></a>
            </div>
        <% } else { %>
            <div style="margin-top:3rem;">
                <p class="muted" style="margin-bottom:1.5rem;">Get started by creating an account or logging in</p>
                <a href="/register"><button style="margin:0 1rem; padding:0.75rem 2rem; font-size:1.1rem;">Register</button></a>
                <a href="/login"><button style="margin:0 1rem; padding:0.75rem 2rem; font-size:1.1rem;">Login</button></a>
            </div>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>

